<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HelpFragment">
    <data>


        <variable
            name="helpFragment"
            type="com.poemgen.mockspire.HelpFragment" />
    </data>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="40dp"
            android:text="Enter a prompt for the AI Poet to generate a poem about. "
            android:textAlignment="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/showMainHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="40dp"
            android:text="Return to Generator"
            android:onClick="@{() -> helpFragment.showMain()}"/>
    </LinearLayout>
</layout>

